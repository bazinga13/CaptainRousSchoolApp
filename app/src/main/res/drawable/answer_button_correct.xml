<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list >
            <!-- SHADOW -->
            <item>
                <shape>
                    <solid
                        android:color="@color/gray800"/>
                    <corners
                        android:radius="2dp"/>
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/black" />
                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px"
                android:left="4px">
                <shape>
                    <solid
                        android:color="@android:color/holo_green_dark"
                        android:angle="270" />
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/black" />
                    <corners
                        android:radius="2dp" />
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="10dp"
                        android:bottom="10dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>